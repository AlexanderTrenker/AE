   <scripts>
      <row>
         <process><![CDATA[:SET &ORADB#     = "DLLW1&IDT#"
:SET &ORAUSER#   = "bbsbat"
:SET &ORASCRIPT# = "flvbatchstat.sql"
:SET &MANDANT#   = ""

cat << __EOF__  > &RUNDIR#/&ORASCRIPT#
SELECT 'FLV-BATCH' AS BATCH,
    &SQLDAT# AS STICHTAG,
    T1.EREIG_SKZ,
    T2.LANG_BEZ AS PROSA,
SUM (
     CASE WHEN T1.MANDANT = 1
     THEN 1
     ELSE 0
END) AS MD01,
SUM (
     CASE WHEN T1.MANDANT = 2
     THEN 1
     ELSE 0
END) AS MD02,
SUM (
     CASE WHEN T1.MANDANT = 20
     THEN 1
     ELSE 0
END) AS MD20,
SUM (
     CASE WHEN T1.MANDANT = 21
     THEN 1
     ELSE 0
END) AS MD21,
SUM (
     CASE WHEN T1.MANDANT = 54
     THEN 1
     ELSE 0
END) AS MD54,
COUNT(*) AS SUMME
FROM       TBBEREIG_POOL_FLV T1
INNER JOIN TBBSCHL_INTEGER   T2
      ON T1.MANDANT   = T2.MANDANT
     AND T1.EREIG_SKZ = T2.SCHL
   WHERE T1.BATCH_DAT <= &SQLDAT#
GROUP BY T1.EREIG_SKZ, T2.LANG_BEZ
ORDER BY T1.EREIG_SKZ, T2.LANG_BEZ
;
__EOF__

:INC JOBI.SQL_CSV

exit $rc]]></process>
