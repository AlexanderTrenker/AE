   <scripts>
      <row>
         <process><![CDATA[:SET &FILEFILTER# = "*.txt"
:RSET &ZIPFILE#   = "Selfausk.zip"

!Ausgabedateien in eine Datei zusammenfassen, weil Sendmail max. 10 Dateien verarbeiten kann
cd &WORKDIR#
zip -vo9 &ZIPFILE# &FILEFILTER#
RC=$?

if [ $RC -eq 0 ]; then
  echo "##MESSAGE## Automatisierte Verarbeitung für Mails im Anhang nicht möglich"
  echo "##OUTFILE## &WORKDIR#/&ZIPFILE#"
  echo "##CODE## 2001"
elif [ $RC -eq 13 ]; then
  echo "##MESSAGE## Keine Dateien zur Verarbeitung gefunden"
  echo "##CODE## 1013"
else
  echo "##MESSAGE## Fehler beim Zippen der Dateien"
  echo "##CODE## 3003"
fi

exit $RC
]]></process>
      </row>
      <row>
         <post_process>:INC JOBI.SHELL_POST</post_process>
      </row>
