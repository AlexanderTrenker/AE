!dat files zusammen kopieren
cd &WORKDIR#
ls nb43p172_md*_&TS#*.dat |while read file; do
  MD=$(echo $file| cut -d_ -f2)
  cat $file >> nb43p172_${MD}_&TS#.dat
done

!dat files pro Mandant sortieren
ls nb43p172_*_&TS#.dat |while read file; do
  sort -n -t '$' -k 6,6 -k 13,13 $file > $file.sort
done

